@model PROG7312_POE.Domain.Issue
@{
    ViewData["Title"] = "Submission received";
}
<div class="container my-4">
    <h2>Thank you! Your report was submitted.</h2>

    <h5 class="mt-3">Summary</h5>
    <ul>
        <li><strong>Reference #</strong> @Model.Id</li>
        <li><strong>Created</strong> @Model.CreatedAt.ToLocalTime()</li>
        <li><strong>Location</strong> @Model.Location</li>
        <li><strong>Category</strong> @Model.Category</li>
        <li><strong>Description</strong> @Model.Description</li>
        <li><strong>Follow-up</strong> @(Model.WillingForFollowUp ? "Yes" : "No")</li>
        <li><strong>Experience</strong> @Model.SubmissionExperience</li>
    </ul>

    @if (Model.Attachments != null && Model.Attachments.Any())
    {
        <h6>Attachments</h6>
        <ul>
            @foreach (var a in Model.Attachments)
            {
                <li>
                    <a href="~/uploads/issues/@Model.Id/@a.StoredFileName" target="_blank">@a.OriginalFileName</a>
                    <span class="text-muted">(@(a.SizeBytes / 1024) KB)</span>
                </li>
            }
        </ul>
    }

    <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-2">Back to main menu</a>
</div>
