@model PROG7312_POE.ViewModels.IssueCreateVm
@{
    ViewData["Title"] = "Confirm your report";
}
<div class="container my-4">
    <h2>Confirm your report</h2>
    <p class="text-muted">Please check the details below before submitting.</p>

    <dl class="row">
        <dt class="col-sm-3">Location</dt>
        <dd class="col-sm-9">@Model.Location</dd>

        <dt class="col-sm-3">Category</dt>
        <dd class="col-sm-9">@Model.Category</dd>

        <dt class="col-sm-3">Description</dt>
        <dd class="col-sm-9">@Model.Description</dd>

        <dt class="col-sm-3">Follow-up</dt>
        <dd class="col-sm-9">@((Model.WillingForFollowUp) ? "Yes" : "No")</dd>

        <dt class="col-sm-3">Experience</dt>
        <dd class="col-sm-9">@Model.SubmissionExperience ?? "—"</dd>
    </dl>

    <form asp-action="Confirm" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()

        <div class="progress mb-3" style="height: 8px;">
            <div class="progress-bar progress-bar-striped" style="width: 66%"></div>
        </div>

        <button type="submit" class="btn btn-success">Submit</button>
        <a asp-action="Create" class="btn btn-outline-secondary">Edit</a>
    </form>
</div>
