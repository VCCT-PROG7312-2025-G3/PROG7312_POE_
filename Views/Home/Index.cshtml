@{
    ViewData["Title"] = "Municipal Services";
}

<div class="container my-5">
    <!-- Hero heading -->
    <h1 class="mb-4 page-hero">Municipal Services</h1>

    <div class="row g-3">
        <!-- Report Issues -->
        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Report Issues</h5>
                    <p class="card-text">Log service problems with location, category and photos.</p>
                    <a class="btn btn-primary" asp-controller="Issues" asp-action="Create">Start report</a>
                </div>
            </div>
        </div>

        <!-- Local Events & Announcements -->
        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Local Events &amp; Announcements</h5>
                    <p class="card-text">See municipal events, outages, road closures and notices.</p>
                    <a class="btn btn-primary" href="@Url.Action("Index", "Events")">Open</a>
                </div>
            </div>
        </div>

        <!-- ✅ Service Request Status (Now clickable) -->
        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Service Request Status</h5>
                    <p class="card-text">Track service requests using advanced data structures.</p>

                    <a class="btn btn-primary"
                       asp-controller="ServiceRequestStatus"
                       asp-action="Index">
                        Open
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="section-divider"></div>
</div>
